---
import "../styles/global.css";

const siteTitle = "Clad Sovereign";
const description =
	"Sovereign bond issuance infrastructure. Mobile-native signing, open-source, built on Substrate.";
const siteUrl = "https://clad.so";
const socialImage = `${siteUrl}/og-image.png`;

// JSON-LD structured data
const organizationSchema = {
	"@context": "https://schema.org",
	"@type": "Organization",
	name: "Clad Sovereign",
	description: description,
	url: siteUrl,
	logo: `${siteUrl}/favicon.svg`,
	foundingDate: "2024",
	parentOrganization: {
		"@type": "Organization",
		name: "WIDEAS Technologies",
	},
	sameAs: ["https://github.com/clad-sovereign"],
};

const softwareSchema = {
	"@context": "https://schema.org",
	"@type": "SoftwareApplication",
	name: "Clad Sovereign",
	applicationCategory: "FinanceApplication",
	operatingSystem: "Web, iOS, Android",
	description:
		"Open-source infrastructure for tokenized sovereign bond issuance with mobile-native signing.",
	offers: {
		"@type": "Offer",
		price: "0",
		priceCurrency: "USD",
	},
	license: "https://www.apache.org/licenses/LICENSE-2.0",
	maintainer: {
		"@type": "Organization",
		name: "WIDEAS Technologies",
	},
};

const webPageSchema = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	name: siteTitle,
	description: description,
	url: siteUrl,
	inLanguage: "en-US",
	isPartOf: {
		"@type": "WebSite",
		name: siteTitle,
		url: siteUrl,
	},
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={siteUrl} />
		<title>{siteTitle}</title>

		<!-- Open Graph -->
		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={siteUrl} />
		<meta property="og:image" content={socialImage} />
		<meta property="og:site_name" content="Clad Sovereign" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={siteTitle} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={socialImage} />

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
		<script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />
		<script type="application/ld+json" set:html={JSON.stringify(webPageSchema)} />

		<!-- Fonts - optimized with preload for critical fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<!-- Preload critical Inter font (used for body text) -->
		<link
			rel="preload"
			as="style"
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
		<!-- Load serif and mono fonts async (non-critical) -->
		<link
			href="https://fonts.googleapis.com/css2?family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&display=swap"
			rel="stylesheet"
			media="print"
			onload="this.media='all'"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&display=swap"
			rel="stylesheet"
			media="print"
			onload="this.media='all'"
		/>
		<noscript>
			<link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet" />
		</noscript>
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>
