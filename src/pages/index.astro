---
import Layout from "../layouts/Layout.astro";

// Trust badges
const badges = [
  { label: "Open Source", sublabel: "Apache 2.0" },
  { label: "Built on Polkadot SDK" },
];

// Grant application URL
const grantApplicationUrl =
  "https://github.com/PolkadotOpenSourceGrants/apply/blob/61dbb435c6eeadd2618b5540fa449696fd8cf975/applications/clad_sovereign.md";

// Problem/Solution pairs
const problemSolution = [
  {
    problem:
      "Browser extensions don't work on mobile devices used by officials",
    solution: "Mobile-native biometric signing on iOS and Android",
  },
  {
    problem:
      "Reliance on legacy financial infrastructure can create operational dependencies",
    solution: "Open-source, auditable code under your sovereign control",
  },
  {
    problem: "Traditional issuance costs 3-5% of bond value",
    solution: "1-2% costs through tokenization infrastructure",
  },
];

// How it works steps
const steps = [
  {
    number: "01",
    title: "Configure",
    description:
      "Ministry defines bond parameters, compliance rules, and investor whitelist criteria",
  },
  {
    number: "02",
    title: "Onboard",
    description:
      "Investors complete KYC/AML verification and join the approved whitelist",
  },
  {
    number: "03",
    title: "Approve",
    description:
      "Authorized signers review and approve issuance with biometric authentication",
  },
  {
    number: "04",
    title: "Issue",
    description:
      "Tokens distributed to investors, settlement completed in seconds",
  },
];

// Key differentiators
const differentiators = [
  {
    title: "Mobile-Native Signing",
    points: [
      "Works on iOS and Android",
      "No browser extensions required",
      "Biometric authentication (Face ID, fingerprint)",
      "Air-gapped QR flow with optional NFC",
    ],
  },
  {
    title: "Compliance-First Design",
    points: [
      "ERC-3643 equivalent compliance patterns",
      "Built-in whitelist and freeze controls",
      "Role-based access management",
      "Full audit trail at runtime level",
    ],
  },
  {
    title: "Sovereign Control",
    points: [
      "Run your own validators",
      "Open-source, fully auditable",
      "No vendor lock-in",
      "Deploy on your infrastructure",
    ],
  },
  {
    title: "Proven Technology",
    points: [
      "Built on Polkadot SDK (Substrate)",
      "Paraguay sovereign equity precedent",
      "Growing institutional adoption globally",
    ],
  },
];

// Use cases
const useCases = [
  {
    title: "Sovereign Bonds",
    description:
      "Treasury bonds, bills, and notes issued directly on-chain with institutional settlement.",
  },
  {
    title: "Green & Climate Bonds",
    description:
      "Sustainable finance instruments with transparent tracking of use of proceeds.",
  },
  {
    title: "SOE Equity",
    description:
      "State-owned enterprise equity tokenization for broader market participation.",
  },
  {
    title: "Commodity-Backed",
    description:
      "Instruments backed by natural resources with verifiable reserves.",
  },
];
---

<Layout>
  <main>
    <!-- Header -->
    <header
      class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-warm-white)]/95 backdrop-blur-sm border-b border-[var(--color-border-light)]"
    >
      <div class="container flex items-center justify-between h-16">
        <a
          href="/"
          class="text-lg font-semibold tracking-tight text-[var(--color-navy)]"
        >
          Clad Sovereign
        </a>
        <nav class="hidden md:flex items-center gap-8">
          <a
            href="#how-it-works"
            class="text-sm text-[var(--color-slate)] hover:text-[var(--color-navy)] transition-colors"
            >How It Works</a
          >
          <a
            href="#technology"
            class="text-sm text-[var(--color-slate)] hover:text-[var(--color-navy)] transition-colors"
            >Technology</a
          >
          <a
            href="#use-cases"
            class="text-sm text-[var(--color-slate)] hover:text-[var(--color-navy)] transition-colors"
            >Use Cases</a
          >
          <a
            href="https://github.com/clad-sovereign"
            target="_blank"
            rel="noreferrer"
            class="text-sm text-[var(--color-slate)] hover:text-[var(--color-navy)] transition-colors"
            >GitHub</a
          >
        </nav>
        <a
          href="mailto:hello@clad.so"
          class="btn btn-primary text-sm py-2 px-4"
        >
          Schedule Briefing
        </a>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="section pt-32 md:pt-40 pb-16 md:pb-24">
      <div class="container max-w-4xl">
        <div class="text-center space-y-8">
          <!-- Trust badges -->
          <div
            class="flex flex-wrap items-center justify-center gap-3 opacity-0 animate-fade-in"
          >
            {
              badges.map((badge) => (
                <span class="badge">
                  {badge.label}
                  {badge.sublabel && (
                    <span class="ml-1.5 text-[var(--color-slate-light)]">
                      ({badge.sublabel})
                    </span>
                  )}
                </span>
              ))
            }
          </div>

          <!-- Headline -->
          <h1
            class="font-serif text-4xl md:text-5xl lg:text-6xl leading-tight text-[var(--color-navy)] opacity-0 animate-fade-in-up"
            style="animation-delay: 0.1s"
          >
            Your Bonds. Your Infrastructure.<br class="hidden sm:block" />
            Your Terms.
          </h1>

          <!-- Subheadline -->
          <p
            class="text-lg md:text-xl text-[var(--color-text-muted)] max-w-3xl mx-auto opacity-0 animate-fade-in-up"
            style="animation-delay: 0.2s"
          >
            Open-source infrastructure for tokenized debt issuance. Configure
            your bond, approve with a tap, settle in seconds. Fewer intermediaries.
            No lock-in.
          </p>

          <!-- CTAs -->
          <div
            class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4 opacity-0 animate-fade-in-up"
            style="animation-delay: 0.3s"
          >
            <a
              href="mailto:hello@clad.so"
              class="btn btn-primary w-full sm:w-auto"
            >
              Schedule a Briefing
            </a>
            <a
              href={grantApplicationUrl}
              target="_blank"
              rel="noreferrer"
              class="btn btn-secondary w-full sm:w-auto"
            >
              Read Grant Application
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem/Solution Section -->
    <section class="section bg-white border-y border-[var(--color-border)]">
      <div class="container max-w-5xl">
        <div class="text-center mb-12">
          <h2 class="font-serif text-2xl md:text-3xl text-[var(--color-navy)]">
            The Challenge of Modern Sovereign Issuance
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8 md:gap-12">
          <!-- Problems Column -->
          <div class="space-y-6">
            <h3
              class="text-sm font-medium uppercase tracking-wider text-[var(--color-slate-light)] mb-4"
            >
              Current Constraints
            </h3>
            {
              problemSolution.map((item) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-6 h-6 rounded-full bg-[var(--color-cream)] flex items-center justify-center mt-0.5">
                    <svg
                      class="w-3 h-3 text-[var(--color-slate)]"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"
                      />
                    </svg>
                  </div>
                  <p class="text-[var(--color-text-muted)]">{item.problem}</p>
                </div>
              ))
            }
          </div>

          <!-- Solutions Column -->
          <div class="space-y-6">
            <h3
              class="text-sm font-medium uppercase tracking-wider text-[var(--color-slate-light)] mb-4"
            >
              With Clad
            </h3>
            {
              problemSolution.map((item) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-6 h-6 rounded-full bg-[var(--color-navy)] flex items-center justify-center mt-0.5">
                    <svg
                      class="w-3 h-3 text-white"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                  </div>
                  <p class="text-[var(--color-text)]">{item.solution}</p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Cost savings callout -->
        <div
          class="mt-12 p-6 md:p-8 bg-[var(--color-cream)] rounded-lg border border-[var(--color-border)]"
        >
          <div
            class="flex flex-col md:flex-row md:items-center md:justify-between gap-4"
          >
            <div>
              <p
                class="text-sm font-medium uppercase tracking-wider text-[var(--color-slate-light)] mb-1"
              >
                Potential Savings
              </p>
              <p
                class="text-2xl md:text-3xl font-semibold text-[var(--color-navy)]"
              >
                $10M - $15M
              </p>
              <p class="text-sm text-[var(--color-text-muted)]">
                on a $500M bond issuance
              </p>
            </div>
            <div class="text-sm text-[var(--color-text-muted)] max-w-md">
              Traditional issuance costs 3-5% through intermediaries. Tokenized
              infrastructure reduces this to 1-2%, returning capital to
              sovereign priorities.
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section id="how-it-works" class="section">
      <div class="container max-w-5xl">
        <div class="text-center mb-16">
          <h2
            class="font-serif text-2xl md:text-3xl text-[var(--color-navy)] mb-4"
          >
            How It Works
          </h2>
          <p class="text-[var(--color-text-muted)] max-w-2xl mx-auto">
            From configuration to settlement, a streamlined process designed for
            government workflows.
          </p>
        </div>

        <!-- Steps -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 md:gap-0">
          {
            steps.map((step, index) => (
              <div class="relative flex flex-col items-center">
                {/* Connector line - horizontal on desktop */}
                {index < steps.length - 1 && (
                  <div
                    class="hidden md:block absolute top-8 h-px bg-[var(--color-border)] -translate-y-1/2 connector-line"
                  />
                )}
                {/* Connector line - vertical on mobile */}
                {index < steps.length - 1 && (
                  <div
                    class="md:hidden absolute left-1/2 -translate-x-1/2 w-px h-12 bg-[var(--color-border)]"
                    style="top: calc(100% + 0.25rem);"
                  />
                )}
                <div class="relative z-10 flex items-center justify-center w-16 h-16 rounded-full bg-[var(--color-navy)] text-white font-mono text-lg font-medium">
                  {step.number}
                </div>
                <h3 class="text-lg font-semibold text-[var(--color-navy)] mb-2 mt-4 text-center">
                  {step.title}
                </h3>
                <p class="text-sm text-[var(--color-text-muted)] text-center px-4 md:px-2">
                  {step.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Key Differentiators Section -->
    <section
      id="technology"
      class="section bg-white border-y border-[var(--color-border)]"
    >
      <div class="container max-w-6xl">
        <div class="text-center mb-16">
          <h2
            class="font-serif text-2xl md:text-3xl text-[var(--color-navy)] mb-4"
          >
            Built for Sovereign Requirements
          </h2>
          <p class="text-[var(--color-text-muted)] max-w-2xl mx-auto">
            Infrastructure designed from the ground up for government debt
            management offices.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
          {
            differentiators.map((diff) => (
              <div class="card">
                <h3 class="text-lg font-semibold text-[var(--color-navy)] mb-4">
                  {diff.title}
                </h3>
                <ul class="space-y-3">
                  {diff.points.map((point) => (
                    <li class="flex gap-3 text-[var(--color-text-muted)]">
                      <svg
                        class="flex-shrink-0 w-5 h-5 text-[var(--color-teal)] mt-0.5"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      <span>{point}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Use Cases Section -->
    <section id="use-cases" class="section">
      <div class="container max-w-5xl">
        <div class="text-center mb-16">
          <h2
            class="font-serif text-2xl md:text-3xl text-[var(--color-navy)] mb-4"
          >
            Use Cases
          </h2>
          <p class="text-[var(--color-text-muted)] max-w-2xl mx-auto">
            Flexible infrastructure supporting diverse sovereign financial
            instruments.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {
            useCases.map((useCase) => (
              <div class="p-6 border border-[var(--color-border)] rounded-lg bg-white hover:border-[var(--color-slate-light)] transition-colors">
                <h3 class="text-lg font-semibold text-[var(--color-navy)] mb-2">
                  {useCase.title}
                </h3>
                <p class="text-[var(--color-text-muted)]">
                  {useCase.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Technical Credibility Section -->
    <section class="section bg-[var(--color-navy)] text-white">
      <div class="container max-w-5xl">
        <div class="text-center mb-12">
          <h2 class="font-serif text-2xl md:text-3xl mb-4">
            Technical Foundation
          </h2>
          <p class="text-white/70 max-w-2xl mx-auto">
            Open-source, auditable, and built on proven blockchain
            infrastructure.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <a
            href="https://github.com/clad-sovereign/clad-studio"
            target="_blank"
            rel="noreferrer"
            class="p-6 rounded-lg bg-white/5 border border-white/10 hover:bg-white/10 hover:border-white/20 transition-colors group"
          >
            <div class="flex items-center gap-3 mb-3">
              <svg
                class="w-6 h-6 text-white/60 group-hover:text-white transition-colors"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"
                ></path>
              </svg>
              <span class="font-medium">clad-studio</span>
            </div>
            <p class="text-sm text-white/60">
              Web application and Substrate pallet for bond configuration and
              issuance.
            </p>
          </a>

          <a
            href="https://github.com/clad-sovereign/clad-mobile"
            target="_blank"
            rel="noreferrer"
            class="p-6 rounded-lg bg-white/5 border border-white/10 hover:bg-white/10 hover:border-white/20 transition-colors group"
          >
            <div class="flex items-center gap-3 mb-3">
              <svg
                class="w-6 h-6 text-white/60 group-hover:text-white transition-colors"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"
                ></path>
              </svg>
              <span class="font-medium">clad-mobile</span>
            </div>
            <p class="text-sm text-white/60">
              iOS and Android app for biometric transaction signing.
            </p>
          </a>

          <div class="p-6 rounded-lg bg-white/5 border border-white/10">
            <div class="flex items-center gap-3 mb-3">
              <svg
                class="w-6 h-6 text-white/60"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
              <span class="font-medium">Security Model</span>
            </div>
            <p class="text-sm text-white/60">
              Air-gapped signing, biometric protection, role-based access
              control.
            </p>
          </div>
        </div>

        <!-- Architecture highlights -->
        <div class="grid md:grid-cols-3 gap-8 pt-8 border-t border-white/10">
          <div class="text-center">
            <p class="text-3xl font-semibold mb-1">Substrate</p>
            <p class="text-sm text-white/60">Blockchain Framework</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-semibold mb-1">ERC-3643</p>
            <p class="text-sm text-white/60">Compliance Patterns</p>
          </div>
          <div class="text-center">
            <p class="text-3xl font-semibold mb-1">Apache 2.0</p>
            <p class="text-sm text-white/60">Open Source License</p>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="section">
      <div class="container max-w-3xl">
        <div class="text-center">
          <h2
            class="font-serif text-2xl md:text-3xl text-[var(--color-navy)] mb-6"
          >
            About
          </h2>
          <p class="text-[var(--color-text-muted)]">
            Clad Sovereign is developed by WIDEAS Technologies, focused on
            building open-source infrastructure for sovereign financial systems.
            Our work centers on enabling governments to issue and manage
            tokenized debt instruments with full sovereignty over their
            technology stack.
          </p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="section bg-[var(--color-cream)] border-t border-[var(--color-border)]"
    >
      <div class="container max-w-3xl text-center">
        <h2
          class="font-serif text-2xl md:text-3xl text-[var(--color-navy)] mb-4"
        >
          Interested in Learning More?
        </h2>
        <p class="text-[var(--color-text-muted)] mb-8 max-w-xl mx-auto">
          We offer technical briefings for debt management offices and finance
          ministries exploring tokenized issuance infrastructure.
        </p>
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
          <a
            href="mailto:hello@clad.so"
            class="btn btn-primary w-full sm:w-auto"
          >
            Request a Technical Briefing
          </a>
          <a
            href="https://github.com/clad-sovereign"
            target="_blank"
            rel="noreferrer"
            class="btn btn-secondary w-full sm:w-auto"
          >
            View on GitHub
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 border-t border-[var(--color-border)]">
      <div class="container">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-4"
        >
          <div class="flex items-center gap-6">
            <span class="text-sm text-[var(--color-text-muted)]">
              &copy; 2025 WIDEAS Technologies
            </span>
            <span class="text-[var(--color-border)]">|</span>
            <span class="badge text-xs">Open Source (Apache 2.0)</span>
          </div>
          <div class="flex items-center gap-6">
            <a
              href="mailto:hello@clad.so"
              class="text-sm text-[var(--color-slate)] hover:text-[var(--color-navy)] transition-colors"
            >
              hello@clad.so
            </a>
            <a
              href="https://github.com/clad-sovereign"
              target="_blank"
              rel="noreferrer"
              class="text-sm text-[var(--color-slate)] hover:text-[var(--color-navy)] transition-colors"
            >
              GitHub
            </a>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>
